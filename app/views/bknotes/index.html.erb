<p id="notice"><%= notice %></p>

<h1>Listing Bknotes</h1>
<div class="container">
  <!-- <caption>book list</caption> -->
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Book</th>
      <th>Name</th>
      <th>Page</th>
      <th>Unit</th>
      <th>Note</th>
      <th>Practice</th>
      <th>Referdoc</th>
      <th>Referurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bknotes.each do |bknote| %>
      <tr>
        <td><%= bknote.book_id %></td>
        <td><%= bknote.name %></td>
        <td><%= bknote.page %></td>
        <td><%= bknote.unit %></td>
        <td><%= bknote.note %></td>
        <td><%= bknote.practice %></td>
        <td><%= bknote.referdoc %></td>
        <td><%= bknote.referurl %></td>
        <td><%= link_to 'Show', bknote %></td>
        <td><%= link_to 'Edit', edit_bknote_path(bknote) %></td>
        <td><%= link_to 'Destroy', bknote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</table>

<div class="container">
  <%= link_to 'New Bknote', new_bknote_path, class: "btn btn-default glyphicon glyphicon-plus-sign" %>
  <%= link_to 'Books', books_path, class: "btn btn-default glyphicon glyphicon-list" %>
  <%= link_to 'Blogs', blogs_path, class: "btn btn-default glyphicon glyphicon-list" %>
</div>