<h3>Listing Bknotes</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-1">Book</th>
      <th class="col-md-2">Name</th>
      <th class="col-md-1">Page&Unit</th>
      <th class="col-md-4">Note</th>
      <th class="col-md-3">Practice</th>
<!--  <th class="col-md-1">Referdoc</th>
      <th class="col-md-1">Referurl</th> -->
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @bknotes.each do |bknote| %>
    <tr>
      <td><%= bknote.book_id %></td>
      <td><%= bknote.name %></td>
      <td><%= bknote.page %> [<%= bknote.unit %>]</td>
      <td><%= bknote.note %></td>
      <td><%= bknote.practice %></td>
      <td><%= link_to 'Show', bknote %></td>
      <td><%= link_to 'Edit', edit_bknote_path(bknote) %></td>
      <td><%= link_to 'Destroy', bknote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
