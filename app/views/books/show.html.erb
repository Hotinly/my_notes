<div class="container">
  <p id="notice"><%= notice %></p>

  <span class="btn btn-default btn-sm glyphicon glyphicon-collapse-down" data-toggle="collapse" data-target="#book-info">==</span>
  <div id="book-info" class="collapse in">
    <div class="row">
      <div class="col-md-3">
        <img src="<%= @book.picture %>" class="img-thumbnail">
      </div>

      <div class="col-md-9">
        <div class="row">
          <p class="col-md-3">
            <strong>Name:</strong>
            <input type="text" class="form-control" placeholder="[Books name]" value="<%= @book.name %>" readonly >
          </p>
        </div>

        <div class="row">
          <p class="col-md-5">
            <strong>Intro:</strong>
            <textarea class="form-control" rows="4" placeholder="[Short describe]" readonly ><%= @book.intro %></textarea>
          </p>
        </div>

        <div class="row">
          <p class="col-md-3">  
            <strong>Picture:</strong>
            <input type="text" class="form-control" placeholder="[Picture link]" value="<%= @book.picture %>" readonly >
          </p>

          <p class="col-md-3">
            <strong>Pathw:</strong>
            <input type="text" class="form-control" placeholder="[Web path]" value="<%= @book.pathw %>" readonly >
          </p>

          <p class="col-md-3">
            <strong>Pathl:</strong>
            <input type="text" class="form-control" placeholder="[Local path]" value="<%= @book.pathl %>" readonly >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
